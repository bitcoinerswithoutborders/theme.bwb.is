<article class="tease tease-{{post.post_type}} {{post.post_name}}" id="tease-{{post.slug}}">
  {% block content %}
    <h2><a href="{{post.link}}">{{post.title}}</a></h2>

    {% if post.get_thumbnail %}
      <img src="{{post.thumbnail.src('thumbnail')}}" />
    {% endif %}
  {% endblock %}
</article>
