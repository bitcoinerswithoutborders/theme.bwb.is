{% extends "base.twig" %}

{% block content %}

  <div class="content-wrapper">
    <article class="post-type-{{post.post_type}}" id="post-{{post.slug}}">
      <section class="article-content">
        <h1 class="article-h1">{{post.title}}</h1>
        <img class="alignleft" src="{{post.thumbnail.src("medium")}}" alt="{{post.title}} Picture" title="{{post.title}}" />
        <div class="article-body">{{post.content}}</div>
      </section>

      {% if post.comment_status == 'open' %}
        <section class="comments">
          <div class="respond">
            <h3 class="h2">Comments</h3>
              {{ comment_form }}
            </div>
            <div class="responses">
              {% for cmt in post.get_comments() %}
                {% include "comment.twig" with {comment:cmt} %}
              {% endfor %}
            </div>
        </section>
      {% endif %}
    </article>
  </div> <!-- /content-wrapper -->

{% endblock %}
